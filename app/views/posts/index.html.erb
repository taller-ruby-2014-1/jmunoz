<h1>Lista de Posts, Willy</h1>

<table>
<tr><th>Titulo</th><th>Texto</th><th>&nbsp;</th></tr>
<% @posts.each do |post| %>
	<tr>
		<td><%= post.title %></td>
		<td><%= post.text %></td>
		<td><%= link_to "Ver post", post %></td>
	</tr>
<% end %>
</table>
<p>
	<%= link_to "Nuevo post", new_post_path %>
</p>