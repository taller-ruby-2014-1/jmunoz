<h1>Nuevo post, Willy</h1>

<%= form_for :post, url: post_path(@post.id), method: :patch do |f| %>
    <% if @post.errors.any? %>
        <div id="errorExplanation">
            <strong>Estamos en la B, perrito</strong>
            <ul>
                <% @post.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
    <% end %>
	<p>
		<%= f.label :title %><br>
		<%= f.text_field :title %>
	</p>
	<p>
		<%= f.label :text %><br>
		<%= f.text_area :text %>
	</p>
	<p>
		<%= f.submit %> | <%= link_to "Volver a lista de posts", posts_path %>
	</p>
<% end %>
